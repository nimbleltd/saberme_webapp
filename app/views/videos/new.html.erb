<h1>Add a new video to SaberMe</h1>

<%= form_for(@video) do |f| %>
    <p>
      <%= f.label :title, 'SaberMe Title'%><br/>
      <%= f.text_field :title, :size => 60 %>
    </p>
    <p>
      <%= f.label :youtube_url, 'Youtube URL' %><br/>
      <%= f.text_field :youtube_url, :size => 80 %>
    </p>
    <p>
      <%= f.label :user_owner, 'username' %><br/>
      <%= f.text_field :user_owner, :size => 60 %>
    </p>
    <p>
        <%= f.label :state, 'change state:' %> <br/>
        <%#= f.select :state, ["submitted","in-progress", "ready for review", "approved"] %>
        <%= f.radio_button(:state, 'submitted') %>
        <%= f.label(:state, "submitted") %>
        <%= f.radio_button(:state, "in-progress") %>
        <%= f.label(:state, "in-progress") %>
        <%= f.radio_button(:state, "ready for review") %>
        <%= f.label(:state, "ready for review") %>
        <%= f.radio_button(:state, "approved") %>
        <%= f.label(:state, "approved") %>
    </p>

    <%= f.submit 'Submit' %>
<% end %>