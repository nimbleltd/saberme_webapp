<h1>My SaberMe Videos</h1>

<ul>
    <% @videos.each do |video| %>
      <li>
        <b><%= link_to video.title, video_path(video) %></b><br/>
        You Tube URL: <a href="<%= video.youtube_url %>"><%= video.youtube_url %></a><br/>
        You Tube embed:<br/>
        <iframe width="640" height="400" src="http://www.youtube.com/embed/<%= video.embed_name %>" frameborder="0" allowfullscreen></iframe><br/>

        User: <%= video.user_id %><br/>
        State: <%= video.state %><br/>
        <i>Update:
          <%= link_to "edit", edit_video_path(video) %>
          <%= link_to "remove", video, :method => :delete, :confirm => "Delete the video'#{video.title}?" %>
        </i>
        <br/><br/><br/>
      </li>
    <% end %>
</ul>

